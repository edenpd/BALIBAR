@model IEnumerable<BALIBAR.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<center>
    <h1>Your Reservations</h1>

    @{int i = 0;
        int j = 0;
        Reservation selectedRes = new Reservation();
        Reservation[] res = Model.ToArray(); }

    <div id="reservations">
        <div class="row">
            <div class="search-card form-inline filter" style="padding:1rem;">
                <form id="searchForm">
                    <div class="form-group">
                        <label class="control-label" for="barName">Bar name : </label>
                        <input class="form-control" type="text" name="barName">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="fromDate">From Date</label>
                        <input name="fromDate" type="date" class="form-control" id="formGroupExampleInput2" placeholder="From Date">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="toDate">To Date</label>
                        <input name="toDate" type="date" class="form-control" id="formGroupExampleInput2" placeholder="To Date">
                    </div>
                    <div class="form-group">
                        <button id="searchButton" type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row" style="margin-bottom:1rem;">
            <div onclick="location.href='@Url.Action("Create")'" class="room-card new">
                <h1>Make A Reservation</h1>
            </div>
        </div>

        <div id="reservationList">
        </div>
    </div>
</center>

@section Scripts {
    <script src="~/js/reservationList.js"></script>
}